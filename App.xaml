<Application x:Class="LiesOfPractice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LiesOfPractice"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:views="clr-namespace:LiesOfPractice.Views"
             xmlns:vm="clr-namespace:LiesOfPractice.Viewmodels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
                <views:PlayerView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
