<Window x:Class="LiesOfPractice.Views.NotifyBoxYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" SizeToContent="Width" Height="150" MaxWidth="500"
        ui:WindowHelper.UseModernWindowStyle="True">
  <b:Interaction.Triggers>
    <b:EventTrigger EventName="GotFocus">
      <b:InvokeCommandAction Command="{Binding FocusCommand}"/>
    </b:EventTrigger>
  </b:Interaction.Triggers>
  <Window.Resources>
    <Style TargetType="Border">
      <Setter Property="CornerRadius" Value="5"/>
    </Style>
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="30"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="40" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Rectangle Grid.ColumnSpan="2" Fill="#FF292929"/>
    <Image Grid.Row="0"
           Grid.Column="0"
           Source="/Resources/P.ico"  
           Width="21" Height="40"
           Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    <TextBox Grid.Row="0"
             Grid.Column="1"
             MaxWidth="400"
             Margin="5"
             TextWrapping="Wrap"
             Background="#E5484848"
             Foreground="White"
             ScrollViewer.CanContentScroll="True"
             ScrollViewer.VerticalScrollBarVisibility="Visible"
             IsReadOnly="True"
             Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}">
      <TextBox.Resources>
        <Style TargetType="Border">
          <Setter Property="CornerRadius" Value="5"/>
        </Style>
      </TextBox.Resources>
    </TextBox>
    <Rectangle Grid.Row="1" Fill="Black" Grid.ColumnSpan="2"/>
    <StackPanel Grid.Row="1" 
               Grid.ColumnSpan="2"
               Orientation="Horizontal" 
               HorizontalAlignment="Left"
                Margin="5">
      <Button x:Name="btnYes" 
             Content="Yes"
             Background="#E5484848"
              Foreground="White"
             Width="60" Height="27"
             FontSize="12"
             Command="{Binding OkResultCommand, UpdateSourceTrigger=PropertyChanged}">
        <Button.Resources>
          <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
          </Style>
        </Button.Resources>
      </Button>
      <Button x:Name="btnNo"
             Content="No"
             Background="#E5484848"
             Foreground="White"
             Width="60" Height="27"
             FontSize="12"
             Margin="10,0,0,0">
        <Button.Resources>
          <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
          </Style>
        </Button.Resources>
        <b:Interaction.Triggers>
          <b:EventTrigger EventName="Click">
            <b:CallMethodAction MethodName="Close"
                          TargetObject="{Binding RelativeSource={RelativeSource
                                                 Mode=FindAncestor,
                                                 AncestorType=Window}}" />
          </b:EventTrigger>
        </b:Interaction.Triggers>
      </Button>
    </StackPanel>
  </Grid>
</Window>
