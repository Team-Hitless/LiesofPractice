<Window x:Class="LiesOfPractice.Views.GitHub"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:LiesOfPractice.Views"
        mc:Ignorable="d"
        Title="New Version" Height="245" Width="450" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="true">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Margin="25,10,0,0"
           Grid.Row="0"
           Grid.ColumnSpan="2"
           Foreground="White"
           FontSize="30"
           FontWeight="Bold"
           Content="NEW VERSION AVAILABLE!" FontStyle="Italic"/>
        <Label Margin="30,10,0,0"
           Grid.Row="1"
           Grid.Column="0"
           Foreground="White"
           FontSize="20"
           FontWeight="Bold"
           Content="{Binding CurrentVersion}">
        </Label>
        <Label Margin="30,10,0,0"
           Grid.Row="1"
           Grid.Column="1"
           Foreground="White"
           FontSize="20"
           FontWeight="Bold"
           Content="{Binding NewVersion}">
        </Label>
        <Button Height="34" Width="150"  
            Grid.Row="2"
            Grid.Column="0"
            Margin="30,0,0,0"
            Background="#B2484848"
            FontSize="20"
            FontWeight="Bold"
            Padding="-50"
            Command="{Binding OpenUrlCommand}"
            Content="Go to GitHub">
        </Button>
        <Button Height="34" Width="150"
            Margin="30,0,0,0"
            Grid.Row="2"
            Grid.Column="1"
            Background="#B2484848"
            FontSize="20"
            FontWeight="Bold"
            Padding="-50"
            Content="Keep it">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Click">
                    <b:CallMethodAction MethodName="Close"
                           TargetObject="{Binding RelativeSource={RelativeSource
                                                  Mode=FindAncestor,
                                                  AncestorType=Window}}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </Button>
    </Grid>
</Window>
