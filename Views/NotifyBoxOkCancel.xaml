<Window x:Class="LiesOfPractice.Views.NotifyBoxOkCancel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:vm="clr-namespace:LiesOfPractice.Viewmodels"
        d:DataContext="{d:DesignInstance Type=vm:NotifyBoxOkCancelViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Height="150" MaxWidth="500"
        WindowStyle="None"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:ThemeManager.IsThemeAware="True">
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" Fill="#FF292929"/>
        <Image Grid.Row="0" Grid.Column="0" Source="/Resources/P.png" Margin="8"
               HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5"
                 TextWrapping="Wrap" IsReadOnly="True"
                 HorizontalAlignment="Left"
                 Text="{Binding Message}">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Rectangle Grid.Row="1" Fill="Black" Grid.ColumnSpan="2"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Margin="5">
            <Button Content="Ok" Width="60" Height="27" FontSize="12"
                    Command="{Binding OkResultCommand}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:CallMethodAction MethodName="Close"
                          TargetObject="{Binding RelativeSource={RelativeSource
                                                 Mode=FindAncestor,
                                                 AncestorType=Window}}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Cancel" Width="60" Height="27" FontSize="12" Margin="10,0,0,0">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Click">
                        <b:CallMethodAction MethodName="Close"
                          TargetObject="{Binding RelativeSource={RelativeSource
                                                 Mode=FindAncestor,
                                                 AncestorType=Window}}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
