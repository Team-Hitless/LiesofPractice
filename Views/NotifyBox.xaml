<Window x:Class="LiesOfPractice.Views.NotifyBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" SizeToContent="Width" Height="150"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"
             MaxWidth="400"
             Margin="5"
             TextWrapping="Wrap"
             ScrollViewer.CanContentScroll="True"
             IsReadOnly="True"
             Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <Button Content="OK" Grid.Row="1" HorizontalAlignment="Left" Margin="5"
                Width="60" Height="27" FontSize="12">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Click">
                    <b:CallMethodAction MethodName="Close"
                  TargetObject="{Binding RelativeSource={RelativeSource
                                         Mode=FindAncestor,
                                         AncestorType=Window}}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>

</Window>
